<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/empty_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white_normal"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/emptyImageView"
        android:layout_width="@dimen/drawable_size"
        android:layout_height="@dimen/drawable_size"
        android:layout_marginLeft="@dimen/spacing_twenty_four"
        android:layout_marginTop="@dimen/spacing_twenty_four"
        android:layout_marginRight="@dimen/spacing_twenty_four"
        tools:src="@drawable/img_empty_view" />

    <TextView
        android:id="@+id/emptyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/empty"
        android:textColor="#666666"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_twenty_four"
        android:padding="5dp"
        android:text="@string/retry"
        android:textColor="#717577"
        android:textSize="13sp" />
</LinearLayout>
